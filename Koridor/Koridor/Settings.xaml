<Window x:Class="Koridor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Koridor"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="310" Width="405">
    <Grid>
        <Border Background="DimGray" Margin="16,10,16,231" CornerRadius="20">
            <TextBlock Text="НАСТРОЙКИ ИГРЫ" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Height="26" Width="188"/>
        </Border>
        <Border Background="LightGray" Margin="15,58,151,10" CornerRadius="20">
            <StackPanel>
                <TextBlock Text="ВЫБОР ПРАТИВНИКА" FontSize="12" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold" Height="16" Width="130" Margin="0,18,0,0"/>
                <RadioButton x:Name="BotButton"  Foreground="DimGray" Content="ИГРАТЬ С БОТОМ" FontSize="10" FontFamily="Verdana" FontWeight="Bold" GroupName="Opponent" Click="OpponentButton_Click" Width="128" Margin="0,18,0,0"/>
                <RadioButton x:Name="FriendButton"   Foreground="DimGray" Content="ИГРАТЬ С ДРУГОМ" FontSize="10" FontFamily="Verdana" FontWeight="Bold" GroupName="Opponent" Click="OpponentButton_Click" Width="128" Height="16" Margin="0,18,0,0" />

            </StackPanel>
        </Border>
        <Border Background="LightGray" Margin="260,58,16,10" CornerRadius="20">
            <TextBlock Text="ПАРАМЕТРЫ ЗВУКА" FontSize="10" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Height="14" Width="100" Margin="12,18,0,0"/>
        </Border>
    </Grid>
</Window>
